contract Customer_Verification {
    data {
        Id int
        Comment string 
		Comment1 string "optional"
        A int

    }
    conditions {
        
    }
    action {
        if $A == 1 {
            DBUpdate("customers",$Id, {verification_status:"Approved", comment:$Comment1})
        } else{
            DBUpdate("customers",$Id, {verification_status:"Declined", status:"Closed", result:"Declined", comment:$Comment})
        }

    }
}