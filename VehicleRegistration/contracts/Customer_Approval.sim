contract Customer_Approval {
    data {
        Id int
        Comment string
        Comment1 string "optional"
        A int

    }
    conditions {

    }
    action {
        var m map
        m = {status:"Closed", result:"Closed", comment:$Comment}
        if $A == 1 {
            m["result"] = "Approved"
            m["comment"] = $Comment1
        }
        DBUpdate("customers",$Id, m)
    }
}