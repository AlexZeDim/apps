Form(input-group){
    Input(Name: Search, Value: #Search#, Placeholder: $@1text_to_search$)
    Div(input-group-btn){
        If(GetVar(Search)!=""){
            Button(Class: btn btn-default fa fa-close, Page: #this_page#)
        }
        Button(Class: btn bg-gray-lighter, Page: #this_page#, PageParams: "Search=Val(Search)", Body: Em(Class: fa fa-search) $@1search$)
    }
}.Style(left:-1px; top:-1px;)